{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**"]
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "interactive": true
    },
    "db:migrate": {
      "cache": false,
      "interactive": true
    },
    "db:push": {
      "cache": false,
      "interactive": true
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputLogs": "new-only"
    },
    "lint": {
      "outputLogs": "new-only"
    },
    "typecheck": {
      "outputLogs": "new-only"
    }
  },
  "globalEnv": ["PORT", "TURBO_MFE_PORT"],
  "globalPassThroughEnv": [
    "CI",
    "MODE",
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",

    "VERCEL_ENV",
    "NEXT_PUBLIC_VERCEL_ENV",
    "VITE_VERCEL_ENV",
    "VERCEL_URL",
    "NEXT_PUBLIC_VERCEL_URL",
    "VITE_VERCEL_URL",
    "VERCEL_PROJECT_PRODUCTION_URL",
    "NEXT_PUBLIC_VERCEL_PROJECT_PRODUCTION_URL",
    "VITE_VERCEL_PROJECT_PRODUCTION_URL",

    "npm_lifecycle_event"
  ]
}
