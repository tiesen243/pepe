{
  "name": "@pepe/web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run --env-file ../../.env next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "bun run --env-file ../../.env next dev --turbopack --port $TURBO_MFE_PORT",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "bun --env-file ../../.env next typegen && eslint",
    "start": "bun run --env-file ../../.env next start",
    "typecheck": "bun --env-file ../../.env next typegen && tsc --noEmit"
  },
  "prettier": "@pepe/prettier-config",
  "dependencies": {
    "@pepe/trpc": "workspace:*",
    "@pepe/ui": "workspace:*",
    "@pepe/validators": "workspace:*",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:trpc",
    "@trpc/tanstack-react-query": "catalog:trpc",
    "next": "^16.0.1",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "superjson": "catalog:trpc"
  },
  "devDependencies": {
    "@pepe/eslint-config": "workspace:*",
    "@pepe/prettier-config": "workspace:*",
    "@pepe/tsconfig": "workspace:*",
    "@tailwindcss/postcss": "catalog:tailwind",
    "@types/node": "catalog:",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tailwindcss": "catalog:tailwind",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:"
  }
}
