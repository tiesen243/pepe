{
  "name": "@pepe/lib",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    "./*": {
      "default": "./dist/*.mjs",
      "types": "./dist/*.d.mts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "~dev": "tsdown --watch ./src"
  },
  "prettier": "@pepe/prettier-config",
  "devDependencies": {
    "@pepe/eslint-config": "workspace:*",
    "@pepe/prettier-config": "workspace:*",
    "@pepe/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
