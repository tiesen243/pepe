{
  "$schema": "https://openapi.vercel.sh/microfrontends.json",
  "applications": {
    "pepe-web": {
      "packageName": "@pepe/web",
      "development": { "local": 3000, "fallback": "pepe.tiesen.id.vn" }
    },
    "pepe-auth": {
      "packageName": "@pepe/auth-service",
      "routing": [{ "paths": ["/api/auth", "/api/auth/:path*"] }],
      "development": {
        "local": 3001,
        "fallback": "auth.pepe.tiesen.id.vn"
      }
    },
    "pepe-post": {
      "packageName": "@pepe/post-service",
      "routing": [{ "paths": ["/api/posts", "/api/posts/:path*"] }],
      "development": {
        "local": 3002,
        "fallback": "post.pepe.tiesen.id.vn"
      }
    }
  }
}
