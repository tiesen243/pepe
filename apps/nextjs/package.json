{
  "name": "@mizuki/nextjs",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run with-env next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "bun run with-env next dev --turbopack",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "bun with-env next typegen && eslint",
    "start": "bun run with-env next start",
    "typecheck": "bun with-env next typegen && tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "prettier": "@mizuki/prettier-config",
  "dependencies": {
    "@mizuki/api": "workspace:*",
    "@mizuki/db": "workspace:*",
    "@mizuki/ui": "workspace:*",
    "@mizuki/validators": "workspace:*",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:trpc",
    "@trpc/tanstack-react-query": "catalog:trpc",
    "next": "^16.0.1",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "superjson": "catalog:trpc"
  },
  "devDependencies": {
    "@mizuki/eslint-config": "workspace:*",
    "@mizuki/prettier-config": "workspace:*",
    "@mizuki/tsconfig": "workspace:*",
    "@tailwindcss/postcss": "catalog:tailwind",
    "@types/node": "catalog:",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tailwindcss": "catalog:tailwind",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:"
  }
}
